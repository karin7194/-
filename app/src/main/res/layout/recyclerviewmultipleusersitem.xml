<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="483dp">

        <ImageView
            android:id="@+id/postimage2"
            android:layout_width="404dp"
            android:layout_height="247dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/whitephoto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepic2"
            android:layout_width="55dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toTopOf="@+id/postimage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.095"
            app:srcCompat="@drawable/whitephoto" />

        <TextView
            android:id="@+id/username2"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_marginEnd="172dp"
            android:text=" "
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/postimage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/underline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postimage2" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="20dp"
            android:background="@color/underline"
            app:layout_constraintBottom_toTopOf="@+id/postimage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username2"
            app:layout_constraintVertical_bias="0.705" />

        <TextView
            android:id="@+id/postinfo2"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:text=" "
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintVertical_bias="0.809" />

        <Button
            android:id="@+id/button09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chat"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.988" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="183dp"
            android:layout_height="25dp"
            android:layout_marginTop="263dp"
            android:layout_marginBottom="13dp"
            android:text="TextView"
            android:textColor="@color/darkgray"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/postinfo2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/postimage2"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>